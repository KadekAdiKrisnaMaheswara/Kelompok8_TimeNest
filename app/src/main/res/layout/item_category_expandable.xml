<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/categoryItemLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_category_bg"
    android:padding="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="8dp"
    android:gravity="center">

    <!-- Nama kategori -->
    <TextView
        android:id="@+id/tvCategoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kategori"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#4A235A" />

    <!-- Jumlah task dalam kategori -->
    <TextView
        android:id="@+id/tvTaskCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 Tasks"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:background="@drawable/rounded_purple_chip"
        android:layout_marginTop="4dp" />
</LinearLayout>

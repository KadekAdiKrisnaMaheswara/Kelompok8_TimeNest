<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <EditText
        android:id="@+id/editTaskTitle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/hint_task_title"
        android:inputType="text"
        android:autofillHints="username"
        android:textSize="14sp" />

    <!-- Category -->
    <TextView
        android:text="@string/label_category"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spinner_edit_category"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_input"
        android:spinnerMode="dropdown"/>

    <!-- Start Date -->
    <TextView
        android:text="@string/label_start_date"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editTaskStartDate"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/hint_select_start_date"
        android:focusable="false"
        android:clickable="true"
        android:inputType="none"
        android:background="@drawable/rounded_input" />

    <!-- End Date -->
    <TextView
        android:text="@string/label_end_date"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editTaskEndDate"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/hint_select_end_date"
        android:focusable="false"
        android:clickable="true"
        android:inputType="none"
        android:background="@drawable/rounded_input" />

    <!-- Time -->
    <TextView
        android:text="@string/label_start_end_time"
        android:layout_marginTop="16dp"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <EditText
            android:id="@+id/editTaskStartTime"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="@string/hint_time"
            android:focusable="false"
            android:clickable="true"
            android:background="@drawable/rounded_input" />

        <EditText
            android:id="@+id/editTaskEndTime"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="@string/hint_time"
            android:focusable="false"
            android:clickable="true"
            android:background="@drawable/rounded_input"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Remind -->
    <TextView
        android:text="Remind"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spinner_edit_remind"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_input" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD"
    tools:context=".ui.home.HomeActivity">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNav"
        android:padding="24dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="80dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Hi, Kelompok 8!"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#2D2D2D" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/sticky_note"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18 tasks pending"
                android:textSize="14sp"
                android:textColor="#888888"
                android:layout_marginBottom="16dp" />

            <!-- Search -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <EditText
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:hint="Search"
                    android:background="@drawable/rounded_input"
                    android:padding="12dp"
                    android:textColorHint="#999999" />
            </LinearLayout>

            <!-- Categories -->
            <TextView
                android:text="Categories"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:textColor="#2D2D2D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Card 1 -->
                <LinearLayout
                    android:background="#FFEEF5"
                    android:layout_marginBottom="12dp"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:text="Primary Task"
                        android:textSize="16sp"
                        android:textColor="#2D2D2D"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="7 Tasks"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/rounded_black_button"
                        android:padding="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- Card 2 -->
                <LinearLayout
                    android:background="#E9FFE9"
                    android:layout_marginBottom="12dp"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:text="Personal"
                        android:textSize="16sp"
                        android:textColor="#2D2D2D"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="5 Tasks"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/rounded_black_button"
                        android:padding="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- Card 3 -->
                <LinearLayout
                    android:background="#E6F2FF"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:text="Daily"
                        android:textSize="16sp"
                        android:textColor="#2D2D2D"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="6 Tasks"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/rounded_black_button"
                        android:padding="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <!-- Ongoing Task -->
            <TextView
                android:text="Ongoing tasks"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:textColor="#2D2D2D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginBottom="12dp"
                android:padding="16dp"
                android:background="#F6E9F0"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Wallet App Design"
                    android:textSize="16sp"
                    android:textColor="#2D2D2D"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="12 June 2025"
                    android:textSize="12sp"
                    android:textColor="#B3445A"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#EFD9F9"
        android:gravity="center">

        <ImageView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/home"
            android:tint="#7B4B94"
            android:padding="12dp" />

        <ImageView
            android:id="@+id/navCalendar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/calender"
            android:tint="#7B4B94"
            android:padding="12dp" />

        <ImageView
            android:id="@+id/navAdd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/add"
            android:tint="#7B4B94"
            android:padding="12dp" />

        <ImageView
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/profil"
            android:tint="#7B4B94"
            android:padding="12dp" />
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4EEFC">

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgIllustration"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:src="@drawable/sticky_note"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/tvWelcome"
                android:text="Welcome to TimeNest!"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#7B4B94"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvDescription"
                android:text="Organize your day, plan your goals, and take control of your time â€” all in one beautiful app."
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="#6A6A6A"
                android:layout_marginBottom="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnGetStarted"
                android:text="Get Started"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#7B4B94"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:padding="14dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
